            [OBJECT:BlueprintPin]
                [PARAMLITERAL:type]
                    exec
                [/PARAMLITERAL]
                [PARAMLITERAL:id]
                    Return_Value
                [/PARAMLITERAL]
                [PARAMLITERAL:title]
